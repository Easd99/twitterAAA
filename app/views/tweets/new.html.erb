<h2>Nuevo tweet</h2>
<div>
    <div class="post">
            <%= form_with(model: Tweet, local: true) do |form|%>
                <div>
                    <%= form.label :description %>
                    <%= form.text_area :description, size: "70x5", class: "text_area_task" %>
                    <%= form.submit "Postear" %>
                    <%= form.label :image %>
                    <%= form.file_field :image %>
                </div>
            <%end%>
        </div>
</div>


<%= link_to('Ver Twitts', tweets_path, class:"rst")%>

